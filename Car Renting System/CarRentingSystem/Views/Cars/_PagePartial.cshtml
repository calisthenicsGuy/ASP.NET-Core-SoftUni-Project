@model AllCarsQueryModel

@{
    int totalPages = (int)Math.Ceiling((double)Model.TotalCars / AllCarsQueryModel.CarsPerPage);
}

<div class="row">
    <div class="col-md-6">
        <a asp-controller="Cars" asp-action="All"
           asp-route-currentPage="@((Model.CurrentPage - 1) < 1 ? Model.CurrentPage = 1 : Model.CurrentPage - 1)"
           asp-route-brand="@Model.Brand"
           asp-route-sorting="@Model.Sorting"
           asp-route-searchTerm="@Model.SearchTerm"
           class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : String.Empty)">
            <<<
        </a>
    </div>
    <div class="col-md-6">
        <a asp-controller="Cars" asp-action="All"
           asp-route-currentPage="@((Model.CurrentPage + 1) > totalPages ? Model.CurrentPage = totalPages : Model.CurrentPage + 1)"
           asp-route-brand="@Model.Brand"
           asp-route-sorting="@Model.Sorting"
           asp-route-searchTerm="@Model.SearchTerm"
           class="btn btn-primary float-end @(Model.CurrentPage == totalPages ? "disabled" : String.Empty)">
            >>>
        </a>
    </div>
</div>
